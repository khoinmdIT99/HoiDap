<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">
    <title>Đăng ký tài khoản</title>
    <link href="/Assets/Login/css/font-face.css" rel="stylesheet" media="all">
    <link href="/Assets/Login/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="/Assets/Login/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="/Assets/Login/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="/Assets/Login/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">
    <link href="/Assets/Login/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="/Assets/Login/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="/Assets/Login/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="/Assets/Login/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="/Assets/Login/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="/Assets/Login/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="/Assets/Login/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">
    <link href="/Assets/Login/css/theme.css" rel="stylesheet" media="all">
    <link href="~/LibraryJS/SweetAlert2/sweetalert2.min.css" rel="stylesheet" />
</head>
<body class="animsition">
    <div class="">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="/">
                                Đăng ký tài khoản
                            </a>
                        </div>
                        <div class="login-form">
                            <form action="" method="post">
                                <div class="form-group">
                                    <label>UserName</label>
                                    <input class="au-input au-input--full" type="text" id="txtUserName" placeholder="UserName">
                                </div>
                                <div class="form-group">
                                    <label>Mật khẩu</label>
                                    <input class="au-input au-input--full" type="password" id="txtPassword" placeholder="Mật khẩu">
                                </div>
                                <div class="form-group">
                                    <label>Họ và tên</label>
                                    <input class="au-input au-input--full" type="text" id="txtFullName" placeholder="Họ và tên">
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="au-input au-input--full" type="text" id="txtEmail" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <label>Số điện thoại</label>
                                    <input class="au-input au-input--full" type="text" id="txtPhone" placeholder="Số điện thoại">
                                </div>
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="button" onclick="Register()">Đăng ký</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/Assets/Login/vendor/jquery-3.2.1.min.js"></script>
    <script src="/Assets/Login/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="/Assets/Login/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <script src="/Assets/Login/vendor/slick/slick.min.js">
    </script>
    <script src="/Assets/Login/vendor/wow/wow.min.js"></script>
    <script src="/Assets/Login/vendor/animsition/animsition.min.js"></script>
    <script src="/Assets/Login/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="/Assets/Login/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="/Assets/Login/vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="/Assets/Login/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="/Assets/Login/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="/Assets/Login/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="/Assets/Login/vendor/select2/select2.min.js">
    </script>
    <script src="/Assets/Login/js/main.js"></script>
    <script src="~/LibraryJS/SweetAlert2/sweetalert2.all.min.js"></script>
    <script src="~/LibraryJS/SweetAlert2/ShowAlert.js"></script>
    <script type="text/javascript">
        function Register() {
            //Chỗ viết code xử lý khi bấm nút đăng ký
            $.ajax({
                type: 'POST',//GET - POST - PUT - DELETE
                url: "/User/RegisterUser", //Đường dẫn
                contentType: 'application/json; charset=utf-8',//Định nghĩa
                data: JSON.stringify({
                    UserName: $("#txtUserName").val(),
                    FullName: $("#txtFullName").val(),
                    PasswordHash: $("#txtPassword").val(),
                    Phone: $("#txtPhone").val(),
                    Email: $("#txtEmail").val()
                }),//Chuyển sang JSON
                dataType: "json",
                async: false,//async = true - đồng bộ, async = false - bất đồng bộ, Xem thêm tại: https://viblo.asia/p/ky-thuat-dong-bo-bat-dong-bo-trong-ajax-MgNeWXxEkYx
                success: function (data) {
                    //Sau khi Đăng ký thành công
                    if (data === "") {
                        SwalNotifySuccess("Đăng ký thành công");
                        setTimeout(function () { window.location.href = "/User/Login"; }, 3000);

                    } else { //Bị trùng UserName <= Hiển thị thông báo cho người dùng
                        alert(data);
                    }
                },
                error: function (xhr, textStatus, errorThrown) {
                    alert("Có lỗi xảy ra");
                }
            });
        }
    </script>
</body>
</html>